{% extends "::base.html.twig" %}

{% block title %}Inscription{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/form_adherent.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/adherent.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/bootstrap-select.min.css') }}" />
{% endblock %}

{% block scriptlink %}
  <script src="{{ asset('js/jquery.js') }}"></script>
  <script src="{{ asset('js/bootstrap-select.min.js') }}"></script>
  <script src="{{ asset('js/defaults-fr_FR.min.js') }}"></script>
{% endblock %}

{% block body %}

    <div class="container">
      <div class="col-sm-12">
        <h1>Formulaire d'inscription</h1>
      </div>
    </div>

    <div class="container" id="formulaire_inscription">

      {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

      {{ form_start(form) }}

      <div class="form-group">
        {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.nom, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.nom) }}
      </div>
      <div class="form-group">
        {{ form_label(form.prenom, 'Prenom', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.prenom, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.prenom) }}
      </div>
      <div class="form-group">
        {{ form_label(form.taille, 'Taille', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.taille, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.taille) }}
      </div>
      <div class="form-group">
        {{ form_label(form.dateNaissance, 'Date Naissance', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.dateNaissance, {'attr': {'class': 'selectpicker'}}) }}</div>
        {{ form_errors(form.dateNaissance) }}
      </div>
      <div class="form-group">
        {{ form_label(form.poids, 'Poids', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.poids, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.poids) }}
      </div>
      <div class="form-group">
        {{ form_label(form.sexe, 'Sexe', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.sexe, {'attr': {'class': 'selectpicker'}}) }}</div>
        {{ form_errors(form.sexe) }}
      </div>
      <div class="form-group">
        {{ form_label(form.email, 'email', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.email, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.email) }}
      </div>
      <div class="form-group">
        {{ form_label(form.password.first, 'Mot de Passe', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.password.first, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.password.first) }}
      </div>
      <div class="form-group">
        {{ form_label(form.password.second, 'Confirmation du Mot de Passe', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.password.second, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.password.second) }}
      </div>
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.adherent, {'label_attr': {'for': 'assosport_accueilbundle_utilisateur_adherent'}}) }}
        </div>
        {{ form_errors(form.adherent) }}
      </div>

      <div id="adherentOrNot">
        <div class="form-group" >
          {{ form_label(form.profilActuel, 'Profil Actuel', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
          <div class="col-sm-10">{{ form_widget(form.profilActuel, {'attr': {'class': 'selectpicker'}}) }}</div>
          {{ form_errors(form.profilActuel) }}
        </div>
        <div class="form-group" >
          {{ form_label(form.sports, 'Sports Favoris', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
          <div class="col-sm-10 okok">{{ form_widget(form.sports, {'attr': {'class': 'selectpicker'}}) }}</div>
          {{ form_errors(form.sports) }}
        </div>
      </div>

      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.participant, {'label_attr': {'for': 'assosport_accueilbundle_utilisateur_participant'}}) }}
        </div>
        {{ form_errors(form.participant) }}
      </div>

      <div id="participantOrNot">
        <div class="form-group" >
          {{ form_label(form.projets, 'Projet', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
          <div class="col-sm-10">{{ form_widget(form.projets, {'attr': {'class': 'selectpicker'}}) }}</div>
          {{ form_errors(form.projets) }}
        </div>
        <div class="form-group" >
          {{ form_label(form.profilProjet, 'Profil Projet', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
          <div class="col-sm-10">{{ form_widget(form.profilProjet, {'attr': {'class': 'selectpicker'}}) }}</div>
          {{ form_errors(form.profilProjet) }}
        </div>
      </div>


      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
      </div>

      {{ form_end(form) }}

    </div>

    <script>
      $(document).ready(function(){
         $("#assosport_accueilbundle_utilisateur_adherent").click(function(){
           if( $("#assosport_accueilbundle_utilisateur_adherent").is( ":checked" ) ) {
             $("#adherentOrNot").show("fast");
           } else {
             $("#adherentOrNot").hide("fast");
           }
         });
      });
      $(document).ready(function(){
         $("#assosport_accueilbundle_utilisateur_participant").click(function(){
           if( $("#assosport_accueilbundle_utilisateur_participant").is( ":checked" ) ) {
             $("#participantOrNot").show("fast");
           } else {
             $("#participantOrNot").hide("fast");
           }
         });
      });
      // $(document).ready(function(){
      //    $("#assosport_accueilbundle_utilisateur_save").click(function() {
      //       if( $("#assosport_accueilbundle_utilisateur_adherent").is( ":checked" ) ) {
      //         alert();
      //       }
      //    });
      // });
    </script>


{% endblock %}
