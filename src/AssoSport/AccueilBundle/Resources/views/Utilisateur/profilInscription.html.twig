{% extends "::base.html.twig" %}
{% block body %}


<link rel="stylesheet" href="{{ asset('css/form.css') }}" />

    <div class="container">
      <div class="col-sm-10">
        <h3>Rejoignez un projet !</h3>
      </div>
    </div>

    <div class="container">
      <!-- { % form_theme form ':Form:bootstrap_3_inscription_form_layout.html.twig' %} -->
      {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


      {{ form_start(form) }}

      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.participant, {'label_attr': {'for': 'assosport_accueilbundle_utilisateur_adherent'}}) }}
        </div>
        {{ form_errors(form.participant) }}
      </div>
      <div class="form-group">
        {{ form_label(form.projets, 'projets', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.projets, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.projets) }}
      </div>
      <div class="form-group">
        {{ form_label(form.profilProjet, 'profilProjet', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.profilProjet, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.profilProjet) }}
      </div>
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
      </div>

      {{ form_end(form) }}

    </div>



{% endblock %}
