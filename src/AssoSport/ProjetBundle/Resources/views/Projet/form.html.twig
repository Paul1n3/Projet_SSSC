
{% extends "::base.html.twig" %}
{% block body %}

<!-- /src/AssoSport/AccueilBundle/Resources/views/Utilisateur/formulaire.html.twig -->

<link rel="stylesheet" href="{{ asset('css/form.css') }}" />

    <div class="container">
      <div class="col-sm-10">
        <h1>Ajout d'activit√©</h1>
      </div>
    </div>

    <div class="container" id="formulaire_inscription">
      <!-- { % form_theme form ':Form:bootstrap_3_inscription_form_layout.html.twig' %} -->
      {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


      {{ form_start(form) }}

      <div class="form-group">
        {{ form_label(form.date, 'Date', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.date, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.date) }}
      </div>
      <div class="form-group">
        {{ form_label(form.distanceKm, 'Distance parourue', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.distanceKm, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.distanceKm) }}
      </div>
      <div class="form-group">
        {{ form_label(form.sport, 'Sport', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.sport, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.date) }}
      </div>
      <div class="form-group">
        {{ form_label(form.projet, 'Projet', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.projet, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.projet) }}
      </div>
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
      </div>
      {{ form_end(form) }}

    </div>

    <script src="{{ asset('js/jquery.js') }}"></script>

    </script>


{% endblock %}
