{% extends "::base.html.twig" %}

{% block title %}Ajout activité Terre-Lune{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/projet.css') }}" />
{% endblock %}

{% block body %}



<link rel="stylesheet" href="{{ asset('css/form.css') }}" />

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h1>Ajout d'activité</h1>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

          {{ form_start(form) }}

          <div class="form-group">
            {{ form_label(form.date, 'Date', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.date, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.date) }}
          </div>
          <div class="form-group">
            {{ form_label(form.distanceKm, 'Distance parourue', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.distanceKm, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.distanceKm) }}
          </div>
          <div class="form-group">
            {{ form_label(form.sport, 'Sport', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.sport, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.date) }}
          </div>
          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
          </div>
          {{ form_end(form) }}
        </div>
      </div>
    </div>

{% endblock %}
