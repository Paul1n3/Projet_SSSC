{% extends "::base.html.twig" %}
{% block body %}


<link rel="stylesheet" href="{{ asset('css/form.css') }}" />

    <div class="container">
      <div class="col-sm-10">
        <h3>Formulaire d'ajout : activité de la semaine</h3>
      </div>
    </div>

    <div class="container" id="formulaire_inscription">
      <!-- { % form_theme form ':Form:bootstrap_3_inscription_form_layout.html.twig' %} -->
      {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


      {{ form_start(form) }}

      <div class="form-group">
        {{ form_label(form.date, 'Date', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.date, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.date) }}
      </div>
      <div class="form-group">
        {{ form_label(form.temps, 'Temps', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.temps, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.temps) }}
      </div>
      <div class="form-group">
        {{ form_label(form.borg, 'Echelle de Borg', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.borg, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.borg) }}
      </div>
      <div class="form-group">
        {{ form_label(form.sensation, 'Sensation ressentie durant l\'effort', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.sensation, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.sensation) }}
      </div>
      <div class="form-group">
        {{ form_label(form.distanceKm, 'Distance parourue (km)', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.distanceKm, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.distanceKm) }}
      </div>
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.adherent, {'label_attr': {'for': 'assosport_accueilbundle_utilisateur_adherent'}}) }}
        </div>
        {{ form_errors(form.adherent) }}
      </div>
      <div class="form-group">
        {{ form_label(form.utilisateur, 'Utilisateur', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.utilisateur, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.utilisateur) }}
      </div>
      <div class="form-group">
        {{ form_label(form.sport, 'Sport pratiqué', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.sport, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.sport) }}
      </div>
      <div class="form-group" >
        {{ form_label(form.projet, 'Ajouter aussi à un projet ?', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.projet, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.projet) }}
      </div>
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
      </div>

      {{ form_end(form) }}

    </div>


{% endblock %}
