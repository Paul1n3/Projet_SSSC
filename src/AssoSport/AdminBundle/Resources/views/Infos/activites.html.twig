{% extends "::base.html.twig" %}
{% block body %}

    <div class="container">
      <div class="col-sm-10">
        <h1>Voici la liste des activités rentrées sur le site:</h1>
      </div>
    </div>

    <div class="container">
      <table class="table table-hover">
    <thead>
      <tr>
        <th>Date</th>
        <th>Temps</th>
        <th>Borg</th>
        <th>Sensation</th>
        <th>DistanceKm</th>
        <th>Asso?</th>
      </tr>
    </thead>
    <tbody>
    {% for activite in activites %}
      <tr>
        <td>{{ activite.date|date("m/d/Y") }}</td>
        <td>{{ activite.temps }}</td>
        <td>{{ activite.borg }}</td>
        <td>{{ activite.sensation }}</td>
        <td>{{ activite.distanceKm }}</td>
        <td>{{ activite.adherent }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
    </div>

{% endblock %}
