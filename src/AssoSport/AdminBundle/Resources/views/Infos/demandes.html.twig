{% extends "::base.html.twig" %}

{% block title %}Demandes d'inscription{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
{% endblock %}

{% block body %}

    <div class="container">
      <div class="col-sm-12">
        <h1>Voici la liste des membres qui souhaitent s'inscrire sur le site:</h1>
      </div>
    </div>

    <div class="container">
      <form method="post" action="{{ path('asso_sport_admin_demandes') }}">
      <table class="table table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Date de naissance</th>
        <th>Adresse mail</th>
        <th>Asso</th>
        <th>Participant</th>
        <th>Validation ?</th>
        <th>Roles utilisateur (pour la présentation)</th>
      </tr>
    </thead>
    <tbody>
      {% set count = 1 %}
    {% for demande in demandes %}
      <tr>
        <td>{{ demande.nom }}</td>
        <td>{{ demande.prenom }}</td>
        <td>{{ demande.dateNaissance|date("m/d/Y") }}</td>
        <td>{{ demande.email }}</td>
        <td>{{ demande.adherent }}</td>
        <td>{{ demande.participant }}</td>
        <td> <input type="checkbox" name="{{ ('test_' ~ count) | trans }}"></td>
        <td>{{ demande.roles|join(', ') }}</td>
      </tr>
      {% set count = count + 1 %}
    {% endfor %}
    </tbody>
  </table>
  <input type="submit" value="Submit">
    </div>




</form>

{% endblock %}
