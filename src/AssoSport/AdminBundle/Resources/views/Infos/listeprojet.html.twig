{% extends "::base.html.twig" %}

{% block title %}Membres du site{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
{% endblock %}

{% block body %}

    <div class="container">
      <div class="col-sm-10">
        <h1>Voici la liste des adhérents au projet {{ projet.nom }}:</h1>
      </div>
    </div>

    <div class="container">
      <table class="table table-hover">
        <thead> <!-- En-tête du tableau -->
           <tr>
               <th>Nom</th>
               <th>Prénom</th>
               <th>Taille</th>
               <th>Date de naissance</th>
               <th>Poids</th>
               <th>Sexe</th>
               <th>Adresse mail</th>
               <th>Voir toutes ses activités</th>
           </tr>
       </thead>

        <tbody>

        {% for utilisateur in users %}
          <tr>
            <td>{{ utilisateur.nom }}</td>
            <td>{{ utilisateur.prenom }}</td>
            <td>{{ utilisateur.taille }}</td>
            <td>{{ utilisateur.dateNaissance|date("m/d/Y") }}</td>
            <td>{{ utilisateur.poids }}</td>
            <td>{{ utilisateur.sexe }}</td>
            <td>{{ utilisateur.email }}</td>
            <td>
                <a role="button" class="btn btn-default" href="activites/perso/{{ utilisateur.id }}">Voir toutes ses activites</a>
                </td>
          </tr>
        {% endfor %}

        </tbody>

      </table>
    </div>

{% endblock %}
