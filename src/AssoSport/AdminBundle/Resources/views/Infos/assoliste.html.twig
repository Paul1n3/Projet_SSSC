{% extends "::base.html.twig" %}
{% block body %}

    <div class="container">
      <div class="col-sm-10">
        <h1>Voici la liste des membres du site qui sont inscrit à l'association:</h1>
      </div>
    </div>

    <div class="container">
      <table class="table table-hover">
    <thead>
      <tr>
        <th>Nom</th>
        <th>Prénom</th>
        <th>Taille</th>
        <th>Date de naissance</th>
        <th>Poids</th>
        <th>Sexe</th>
        <th>Adresse mail</th>
      </tr>
    </thead>
    <tbody>
    {% for utilisateur in utilisateurs %}
      <tr>
        <td>{{ utilisateur.nom }}</td>
        <td>{{ utilisateur.prenom }}</td>
        <td>{{ utilisateur.taille }}</td>
        <td>{{ utilisateur.dateNaissance|date("m/d/Y") }}</td>
        <td>{{ utilisateur.poids }}</td>
        <td>{{ utilisateur.sexe }}</td>
        <td>{{ utilisateur.email }}</td>
      </tr>
    {% endfor %}
    </tbody>
  </table>
    </div>

{% endblock %}
