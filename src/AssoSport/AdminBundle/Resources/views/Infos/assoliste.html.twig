{% extends "::base.html.twig" %}

{% block title %}Liste membres asso{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/form_admin.css') }}" />
{% endblock %}

{% block body %}

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h3>Voici la liste des membres du site qui sont inscrit à l'association:</h3>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
            <table class="table table-hover">
              <thead>
                <tr>
                  <th>Nom</th>
                  <th>Prénom</th>
                  <th>Taille</th>
                  <th>Date de naissance</th>
                  <th>Poids</th>
                  <th>Sexe</th>
                  <th>Adresse mail</th>
                  <th>Voir ses activités</th>
                  <th>Voir ses statistiques</th>
                </tr>
              </thead>
            <tbody>
            {% for utilisateur in utilisateurs %}
              <tr>
                <td>{{ utilisateur.nom }}</td>
                <td>{{ utilisateur.prenom }}</td>
                <td>{{ utilisateur.taille }}</td>
                <td>{{ utilisateur.dateNaissance|date("m/d/Y") }}</td>
                <td>{{ utilisateur.poids }}</td>
                <td>{{ utilisateur.sexe }}</td>
                <td>{{ utilisateur.email }}</td>
                <td>
                <a role="button" class="btn btn-default" href="activites/perso/projet/{{ utilisateur.id }}">Voir toutes ses activites</a>
                </td>
                <td>
                <a role="button" class="btn btn-default" href="adherent/stat/{{ utilisateur.id }}">Voir toutes ses activites</a>
                </td>
              </tr>
            {% endfor %}
            </tbody>
          </table>
        </div>
      </div>
    </div>

{% endblock %}
