{% extends "::base.html.twig" %}

{% block title %}Distance projet Terre Lune{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/distance_totale.css') }}" />
{% endblock %}

{% block body %}

    <div class="container">
      <div class="col-sm-12">
        <h1>Distance effectu√©e pour le projet:</h1>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-12 text-center">
          <h3>La distance parcourue depuis le lancement du projet est de : </h3>
          <h2>{{ distance }} km / {{ projet.objectif }} km</h2>
        </div>
        <div class="col-md-8 col-md-offset-2">
          <div class="progress">
            <span class="progress-value">Progression totale</span>
            <div class="progress-bar" role="progressbar" aria-valuenow= {{ distance }} aria-valuemin="0" aria-valuemax= {{ projet.objectif }}  style="width:{{ distance / projet.objectif * 100}}%">
            </div>
          </div>
        </div>
      </div>
    </div>

{% endblock %}
