{% extends "::base.html.twig" %}

{% block title %}Ajout projet{% endblock %}

{% block stylesheets %}
  <link rel="stylesheet" href="{{ asset('css/admin.css') }}" />
  <link rel="stylesheet" href="{{ asset('css/form_admin.css') }}" />
{% endblock %}

{% block body %}


<link rel="stylesheet" href="{{ asset('css/form.css') }}" />

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          <h3>Vous pouvez ici ajoutez de projets</h3>
        </div>
      </div>
    </div>

    <div class="container">
      <div class="row">
        <div class="col-sm-12">
          {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}

          {{ form_start(form) }}

          <div class="form-group">
            {{ form_label(form.nom, 'Nom', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.nom, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.nom) }}
          </div>
          <div class="form-group">
            {{ form_label(form.objectif, 'Objectif', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.objectif, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.objectif) }}
          </div>
          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">{{ form_widget(form.objectifDistance, {'label_attr': {'for': 'assosport_accueilbundle_utilisateur_adherent'}}) }}
            </div>
            {{ form_errors(form.objectifDistance) }}
          </div>
          <div class="form-group">
            {{ form_label(form.dateDebut, 'Date de d√©but', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.dateDebut, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.dateDebut) }}
          </div>
          <div class="form-group">
            {{ form_label(form.dateFin, 'Date de fin', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.dateFin, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.dateFin) }}
          </div>
          <div class="form-group">
            {{ form_label(form.sports, 'Sports', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
            <div class="col-sm-10">{{ form_widget(form.sports, {'label_attr': {'class': 'form-control'}}) }}</div>
            {{ form_errors(form.sports) }}
          </div>

          <div class="form-group">
            <div class="col-sm-2"></div>
            <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
          </div>

          {{ form_end(form) }}
        </div>
      </div>
    </div>


{% endblock %}
