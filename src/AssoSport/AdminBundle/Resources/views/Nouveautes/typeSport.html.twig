{% extends "::base.html.twig" %}
{% block body %}


<link rel="stylesheet" href="{{ asset('css/form.css') }}" />

    <div class="container">
      <div class="col-sm-10">
        <h3>Vous pouvez ici ajoutez de types de sport</h3>
      </div>
    </div>

    <div class="container">
      <!-- { % form_theme form ':Form:bootstrap_3_inscription_form_layout.html.twig' %} -->
      {% form_theme form 'bootstrap_3_horizontal_layout.html.twig' %}


      {{ form_start(form) }}

      <div class="form-group">
        {{ form_label(form.nom, 'Nom du nouveau type', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.nom, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.nom) }}
      </div>
      <div class="form-group">
        {{ form_label(form.couleur, 'Objectif', {'label_attr': {'class': 'col-sm-2 control-label required'}}) }}
        <div class="col-sm-10">{{ form_widget(form.couleur, {'label_attr': {'class': 'form-control'}}) }}</div>
        {{ form_errors(form.couleur) }}
      </div>
      
      <div class="form-group">
        <div class="col-sm-2"></div>
        <div class="col-sm-10">{{ form_widget(form.save, {'attr': {'class': 'btn btn-primary'}}) }}</div>
      </div>

      {{ form_end(form) }}

    </div>


{% endblock %}
